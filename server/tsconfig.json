{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "lib": ["es2020"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts", "config/environment.json"],
  "files": ["src/index.ts"]
}
