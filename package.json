{
  "private": true,
  "name": "minimalist",
  "author": "Matt Shwery",
  "engines": {
    "node": "10.x"
  },
  "workspaces": [
    "server",
    "web"
  ],
  "scripts": {
    "web": "yarn workspace web",
    "server": "yarn workspace server",
    "dev": "concurrently \"yarn server watch\" \"yarn web start\"",
    "build": "concurrently \"yarn server build\" \"yarn web build\"",
    "test": "yarn server test",
    "start": "yarn server start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix"
    ],
    "*.{js,ts,tsx}": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.16.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3"
  }
}
